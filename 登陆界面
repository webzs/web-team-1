<script language="javascript" type="text/javascript">
function loginsubmit()
{
  //document.form1.content.value = document.frames.cnEditBox.getHTML(true);  
  with (document.form1)
       {
      if (user_name.value=='')
		    {
			  alert("用户不能为空！");
			  user_name.focus();
			}
	   
	     else if (user_password.value=='')
		    {
			  alert("密码不能为空！");
			  user_password.focus();
			}
	    else
		    {
			  form1.submit();
			}		
	   }
}
function checkEnter(){
   	if(event.keyCode==13){//回车的参数是13
       loginsubmit();//进入时先验证Login()
       //event.returnValue = false;//验证没错误提交成功
   	}
}
</script>
